<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pizzeria-app</artifactId>
    <groupId>dta</groupId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>pizzeria-console</artifactId>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <configuration>
            <archive>
              <manifest>
                <mainClass>fr.pizzeria.console.PizzeriaAdminConsoleApp</mainClass>
              </manifest>
            </archive>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>prod</id>
      <dependencies>
        <dependency>
          <groupId>dta</groupId>
          <artifactId>pizzeria-dao-memoire</artifactId>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.fich.DaoFichFactory</dao>
      </properties>
    </profile>
    <profile>
      <id>jpa</id>
      <dependencies>
        <dependency>
          <groupId>dta</groupId>
          <artifactId>pizzeria-dao-jpa</artifactId>
          <version>1.0.0</version>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.jpa.DaoJpaFactory</dao>
      </properties>
    </profile>
    <profile>
      <id>dev</id>
      <dependencies>
        <dependency>
          <groupId>dta</groupId>
          <artifactId>pizzeria-dao-fichier</artifactId>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.mem.DaoMemFactory</dao>
      </properties>
    </profile>
    <profile>
      <id>jdbc</id>
      <dependencies>
        <dependency>
          <groupId>dta</groupId>
          <artifactId>pizzeria-dao-jdbc</artifactId>
          <version>1.0.0</version>
          <scope>runtime</scope>
        </dependency>
        <dependency>
          <groupId>org.apache.commons</groupId>
          <artifactId>commons-collections4</artifactId>
          <version>4.1</version>
        </dependency>
      </dependencies>
      <properties>
        <dao>fr.pizzeria.dao.JDBC.DaoJdbcFactory</dao>
      </properties>
    </profile>
  </profiles>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

